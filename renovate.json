{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "labels": [
    "dependencies"
  ],
  "packageRules": [
    {
      "matchPackagePatterns": [
        "^remark",
        "^rehype"
      ],
      "groupName": "remark/rehype plugins"
    },
    {
      "matchPackagePatterns": [
        "^eslint",
        "^@typescript-eslint",
        "^prettier"
      ],
      "groupName": "eslint/prettier"
    },
    {
      "matchPackagePatterns": [
        "^@?astro"
      ],
      "groupNamse": "astro integrations"
    }
  ]
}